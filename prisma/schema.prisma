generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom fields
  password        String? // For credentials provider
  role            String  @default("student") // 'student' | 'sensei'
  currentBeltId   String  @default("white-belt") // Default belt?
  startDate       DateTime?
  contractStartDate DateTime?
  contractRenewal String? // 'monthly' | 'quarterly' | 'six_months' | 'yearly'
  senseiNotes     String?
  address         String?
  signedContract  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  attendance      Attendance[]
  classes         Class[]
}

model Class {
  id        String   @id @default(cuid())
  name      String
  day       String   // e.g. "Monday"
  time      String   // e.g. "18:00"
  duration  Int      @default(60) // minutes
  students  User[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Belt {
  id    String @id
  name  String
  color String
  order Int    @unique
  videos Video[]
}

model Video {
  id     String @id @default(cuid())
  title  String
  url    String
  beltId String
  belt   Belt   @relation(fields: [beltId], references: [id])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  description String
}

model Attendance {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes     String?
}
